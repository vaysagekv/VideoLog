{
  "name": "persons-in-video-dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "python -m pip install --upgrade pip",
  // This clears any stale installation locks from previous failed attempts
  "postStartCommand": "rm -f /root/.antigravity-server/.installation_lock"
}